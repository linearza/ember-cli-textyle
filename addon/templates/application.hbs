
<style>
  .col{
    display: inline-block;
    width: calc(33.333% - 3px);
    border-right: 1px solid lightgrey;
    box-sizing: border-box;
    vertical-align: top;
  }

  hr {
    margin-top: 0;
  }

  .x-taggable{
    display: block;
  }


</style>

<div class="col">
  Base tags
  <hr>
  {{#each tags as |tagObject|}}
    {{#x-taggable tagName=tagObject.tag as |taggable| }}
      [{{tagObject.tag}}] { }
    {{/x-taggable}}
  {{/each}}
</div>


<div class="col">
  Base tags + classes
  <hr>
  {{#each tags as |tagObject|}}
    {{#x-taggable tagName=tagObject.tag classNames=tagObject.classNames as |taggable| }}
      [{{tagObject.tag}}] { {{tagObject.classNames}} }
    {{/x-taggable}}
  {{/each}}
</div>


<div class="col">
  Misc tag + classes
  <hr>
  {{#each tags as |tagObject|}}
    {{#x-taggable tagName=miscTag classNames=tagObject.classNames as |taggable| }}
      [{{miscTag}}] { {{tagObject.classNames}} }
    {{/x-taggable}}
  {{/each}}
</div>

<br><br><br>

